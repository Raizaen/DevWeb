#include <iostream>

int main () {

	int age = 0;
	std::cout << "Entrez votre age : ";
	std::cin >> age;
	std::cout << std::endl;

	if (age > 18) {
		std::cout << "0";
	}
	else {
		std::cout << "1";
	}

return 0;

}


